<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.rhymestore.android"
      android:versionCode="1"
      android:versionName="1.0">


    <application android:icon="@drawable/icon" android:label="@string/app_name">
    
		<activity android:name=".SplashScreenActivity"
        		  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
        		  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="@string/login_name">
        </activity>

        <activity android:name=".HomeActivity"
        		  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="@string/home_name">
        </activity>

        <activity android:name=".ListRhymesActivity"
        		  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="@string/listrhymes_name">
        </activity>

        <activity android:name=".AddRhymesActivity"
				  android:theme="@android:style/Theme.NoTitleBar"
        		  android:label="@string/addrhymes_name">
        </activity>
    </application>
    
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	
</manifest>