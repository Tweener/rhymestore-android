<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/login_background_image">
	
	<LinearLayout
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<RelativeLayout
			android:id="@+id/login_frame"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/login_frame">
			
			<TextView
				android:id="@+id/text_twitter"
				android:text="@string/twitterTextView"
				android:drawableLeft="@drawable/icon_twitter_small"
				android:padding="5dip"
				android:adjustViewBounds="true"
				android:scaleType="fitXY"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:textStyle="italic"
				android:textColor="#000000"
				android:textSize="14sp"
				android:layout_marginLeft="1dip"
				android:layout_marginBottom="20dip"/>
				
			<TextView
				android:id="@+id/text_login"
				android:layout_below="@+id/text_twitter"
				android:text="@string/loginTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:textColor="#000000"
				android:textSize="14sp"
				android:layout_marginLeft="1dip"
				android:layout_marginBottom="5dip"/>
				
			<EditText
				android:id="@+id/edit_login"
				android:layout_below="@+id/text_login"
				android:maxLines="1"
				android:singleLine="true"
				android:textSize="13sp"
				android:background="@drawable/login_textinput"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<TextView
				android:id="@+id/text_pass"
				android:layout_below="@+id/edit_login"
				android:text="@string/passTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:textColor="#000000"
				android:textSize="14sp"
				android:layout_marginTop="15dip"
				android:layout_marginLeft="1dip"
				android:layout_marginBottom="5dip"/>
				
			<EditText
				android:id="@+id/edit_pass"
				android:layout_below="@+id/text_pass"
				android:password="true"
				android:maxLines="1"
				android:singleLine="true"
				android:textSize="13sp"
				android:background="@drawable/login_textinput"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
				
			<CheckBox
				android:id="@+id/rememberCheckbox"
				android:text="@string/rememberCheckbox"
				android:textColor="#000000"
				android:textSize="14sp"
				android:button="@drawable/login_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dip"
				android:layout_below="@+id/edit_pass" />

			<RelativeLayout
				android:id="@+id/login_button"
				android:gravity="center_horizontal|bottom"
				android:layout_below="@+id/rememberCheckbox"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				
				<ImageButton
					android:id="@+id/connexionImageButton"
					android:background="#FFFFFF"
					android:src="@drawable/login_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
					
			</RelativeLayout>
			
		</RelativeLayout>
			
	</LinearLayout>

</LinearLayout>